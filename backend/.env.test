# Environment de test
NODE_ENV=test
PORT=3002
API_URL=http://localhost:3002
FRONTEND_URL=http://localhost:5173

# Database de test (utiliser une base séparée !)
DATABASE_URL=postgresql://postgres:password@localhost:5432/carnet_suivi_test

# JWT (utiliser un secret différent en test)
JWT_SECRET=test-jwt-secret-min-32-characters-long-for-security
JWT_EXPIRES_IN=1h

# S3/MinIO (mêmes credentials que dev pour les tests)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET_PHOTOS=carnet-suivi-photos-test
S3_BUCKET_BACKUPS=carnet-suivi-backups-test
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_PUBLIC_URL=http://localhost:9000
S3_FORCE_PATH_STYLE=true

# Limites pour les tests
MAX_STUDENTS_FREE=5
